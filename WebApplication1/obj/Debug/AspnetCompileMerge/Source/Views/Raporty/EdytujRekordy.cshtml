                    @Html.DisplayFor(modelItem => item.IdTrash)
                </td>*@
                <td class="col-md-4">
                    @Html.DisplayFor(modelItem => item.ClassName)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td class="col-md-5">
                    @Html.DisplayFor(modelItem => item.Information)
                </td>
                <td class="col-md-1">
                    @Html.ActionLink("Zmień", "ZmienRekord", new
